<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site"
	method="upgrade">
    <name>Gun Policy page specific sponsor module (Position: Left)</name>
    <author>Murshed Ahmmad Khan</author>
    <version>1.5.0</version>
    <description>Gun Policy Page specific sponsor html grabber for the front end</description>
    <files>
        <filename module="mod_gpo_sponsors">mod_gpo_sponsors.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
