    <description>GPO Sponsors Credit to be displayed in the Right Column</description>
    <files>
      <filename module="mod_gpo_sponsors_right">mod_gpo_sponsors_right.php</filename>
      <filename>index.html</filename>
      <filename>helper.php</filename>
      <filename>tmpl/default.php</filename>
